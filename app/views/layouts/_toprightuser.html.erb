 <div class="username-container">            
      <div class="username-icon"><%= image_tag("user-icon.png", alt: "User Image") %></div>
      <div class="username-input"> 
      	<% if current_user.blank? == true %>
        	<%= link_to '(Log In)', {:controller => 'pages', :action => 'login'} %>      
      	<% else %>
      		<%= current_user.First_Name %>
        	<%= link_to ' (Log out)', {:controller => 'pages', :action => 'logout'} %>      
      	<% end %>        
    </div>
</div>      