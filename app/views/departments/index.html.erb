<title><%= 'Department' %></title> 
<div class="main-banner"><%= link_to image_tag("banner.jpg", alt: "Banner")%></div>
<div class="clear"></div>     
<div class="main-column">
  <div class="main-column-content">
    <div class="main-column-content-heading">
      <h1>Department List</h1>      
    </div>
    <!-- <div class="right-column-content-img-left"> <%= link_to image_tag("img-1.png", alt: "Banner")%></div>-->
    <div class="main-column-content-content">
      </br>
      <%= form_tag '/departments/index', method: :post do %>
        <div class="row">            
         <div class="col-md-3">      
            <%= text_field_tag :search, params[:search], :class => 'search-input' %>
          </div>     
          <div class="col-md-2"> 
            <%= submit_tag "Search", :class => 'search-button', :name => 'commit'  %> 
          </div>    
          <div class="col-md-2"> 
            <%=  submit_tag "New", :class => 'search-button', :name => 'commit' %>            
          </div>         
        </div>
      <% end %>
      </br>      
      <table id="departments" class = "display">
        <thead>
          <tr>
            <th>Department ID</th>     
            <th>Name</th>                              
            <th>Options</th>  
          </tr>
        </thead>      
        <tbody> 
         <% @departments.each do |app| %>
          <tr>
            <td><%= app.Department_ID %></td>
            <td><%= app.Name %></td>           
            <td class = 'search-link' >
              <%= link_to image_tag("show.png", size: "24x24", alt: "Show"), {:controller => 'departments', :action => 'show', :id => app.Department_ID, :search => params[:search]} %>
              <%= link_to image_tag("edit.png", size: "24x24",  alt: "Edit"), {:controller => 'departments', :action => 'edit', :id => app.Department_ID, :search => params[:search]} %>
              <%= link_to image_tag("delete.png", size: "24x24",  alt: "Delete"), {:controller => 'departments', :action => 'delete', :id => app.Department_ID }, data: { confirm: 'Are you sure you want to delete Department ID : ' + app.Department_ID + ' ?' } %>
            </td>
          </tr>
         <% end %>        
        </tbody>   
      </table>
    </div>
  </div>
</div>


