<title><%= 'Logout' %></title> 	
 <%= form_for(:employee, :url => {:controller => 'pages', :action => 'authenticate'}) do |f| %>
<div class="main-banner"><%= link_to image_tag("banner.jpg", alt: "Banner")%></div>
<div class="clear"></div>  
<div class="main-column">
  <div class="main-column-content-withimg">    
  <div align="center">
	  <div class="dark-panel">
		    <div class="dark-panel-top"></div>
		    <div class="dark-panel-center">
		      <ul>
		        <li>
		          <h1>Log In</h1>
		        </li>
		        <li>
		          <p>Please enter the user name and password.</p>
		        </li>
		        <li class="username">
		          <input name="userid" type="text" class="login-input" />
		        </li>
		        <li class="loginpassword">
		          <input name="passcode" type="password" class="login-input" />
		        </li>
		        <li><% if flash[:notice] %><p><%= flash[:notice] %></p><% end %></li>  
		        <li class="formbutton"><%= f.submit 'Submit', :class => 'formbutton' %></li>
		        </li>		        
		      </ul>
		    </div>		    
		    <div class="dark-panel-bottom"></div>			   	
		  </div>    
	  </div>   
  </div>
</div>
<% end %>